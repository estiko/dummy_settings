<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/xoplax_settings_title">

    <!-- Custom ProgressBar -->
    <PreferenceScreen
        android:id="@+id/progressbar_settings"
        android:fragment="com.android.settings.xoplax.ProgressBar"
        android:title="@string/progressbar_title"
        android:icon="@drawable/ic_settings_progressbar" />

    <!-- Screen Record -->
    <PreferenceScreen
        android:id="@+id/screen_recorder"
        android:title="@string/screen_recorder_title"
        android:fragment="com.android.settings.xoplax.ScreenRecorderSettings"
        android:icon="@drawable/ic_screen_record" />

    <!-- Wakelock Blocker -->
    <PreferenceScreen
        android:id="@+id/wakelock_blocker"
        android:fragment="com.android.settings.xoplax.WakeLockBlocker"
        android:icon="@drawable/ic_settings_wakelock_blocker"
        android:layout="@layout/preference_wakelockblocker"
        android:title="@string/wakelock_blocker" />

    <!-- Advanced options -->
    <PreferenceScreen
        android:id="@+id/advanced_options_settings"
        android:fragment="com.android.settings.xoplax.AdvancedSettings"
        android:icon="@drawable/ic_settings_advanced"
        android:title="@string/advanced_options_settings_title" />

</PreferenceScreen>
